= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "main-page__body__form" }) do |f|
  = render "devise/shared/error_messages", resource: resource
  .main-page__body__form__group.main-page__body__form__group--border-bottom
    .main-page__body__form__group__field
      .main-page__body__form__group__field__title
        ログイン
  .main-page__body__form__group
    .main-page__body__form__group__field
      = f.label :nickname, "ニックネーム", class: "main-page__body__form__group__field__label"
      = f.text_field :nickname, class: "main-page__body__form__group__field__input"
    .main-page__body__form__group__field
      = f.label :password, "パスワード", class: "main-page__body__form__group__field__label"
      = f.password_field :password, autocomplete: "current-password", class: "main-page__body__form__group__field__input"
    .main-page__body__form__group__field
      = f.submit "ログイン", class: "main-page__body__form__group__field__submit-btn"
    .main-page__body__form__group__field
      .main-page__body__form__group__field__text
        ※ 新規ユーザーの場合は
        = link_to "こちら", new_person_registration_path, class: "main-page__body__form__group__field__text__link"
